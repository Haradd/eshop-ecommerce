<div class="page-header">
  <h1>Products</h1>
</div>

<% @products.each_slice(3) do |products| %>
<div class="row mt-5">

  <% products.each do |product| %>
  <div class="col-sm-3">
    <div class="col-item">
      <div class="photo">
        <img src="http://placehold.it/350x260" class="img-responsive" alt="a" />
      </div>
      <div class="info">
        <div class="row">
          <div class="price col-md-12">
            <h5>
              <%= product.name %>
            </h5>
            <h5 class="price-text-color">
              <%= product.price %> PLN
            </h5>
          </div>

        </div>
        <div class="separator clear-left">
          <p class="btn-add">
            <i class="fa fa-shopping-cart"></i><%= link_to 'Add to cart', add_to_cart_product_path(product.id) %>
          </p>
          <p class="btn-details">
            <i class="fa fa-list"></i><%= link_to 'More details', product %>
          </p>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
  <% end %>
</div>
<% end %>
